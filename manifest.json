{
  "manifest_version": 2,

  "name":             "__MSG_manifest_product_name__",
  "version":          "3.0",
  "description":      "__MSG_manifest_description__",

  "author":           "Ricky Romero",

  "minimum_chrome_version": "41.0.2272.101",
  "default_locale":   "en",

  "background": {
    "scripts": [
      "scripts/private/ui-bridge.js",
      "scripts/private/message-queue.js",
      "scripts/event-bridge.js",
      "scripts/private/private-event-bridge.js",
      "scripts/private/init.js"
    ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "scripts/injected/injection-manager.js",
        "scripts/event-bridge.js",
        "scripts/injected/injected-event-bridge.js",
        "scripts/injected/controller.js"
      ],
      "run_at": "document_start"
    }
  ],

  "browser_action": {
    "default_icon": {
      "16": "images/browser-action/turn-off.png",
      "32": "images/browser-action/turn-off@2x.png"
    },
    "default_title": "__MSG_manifest_product_name__"
  }
}
